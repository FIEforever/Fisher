<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.DesignDemo">
        <!-- Main theme colors -->
        <!--   your app's branding color (for the app bar) -->
        <item name="android:colorPrimary">@color/primary</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:textColorHint">@color/tertiary_text_dark</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="PictureTheme" parent="android:Theme.Translucent.NoTitleBar">
        <!-- Main theme colors -->
        <!--   your app's branding color (for the app bar) -->
        <item name="android:colorPrimary">@color/primary</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:textColorHint">@color/tertiary_text_dark</item>
    </style>
    <style name="ItemBackground">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ItemBackgroundBorderless">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>
