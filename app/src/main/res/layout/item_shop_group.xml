<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/shop"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/item_product_layout"
        style="@style/ItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:clickable="true"
        android:padding="8dp">

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="76dp">

            <ImageView
                android:id="@+id/group_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <View
                android:id="@+id/favorite_tag"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="gone"/>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="【南城区】洗车人家"
                    android:textColor="@color/secondary_text_dark"
                    android:textSize="@dimen/text_size_body"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/shop_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:text="&#60;100m"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_caption"/>
            </LinearLayout>

            <TextView
                android:id="@+id/group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="汽车美容漆面护理套餐，满97元包邮"
                android:textColor="@color/tertiary_text_dark"
                android:textSize="@dimen/text_size_body"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/group_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥138"
                    android:textColor="@color/primary_yellow"
                    android:textSize="@dimen/text_size_title"/>

                <TextView
                    android:id="@+id/group_org_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:text="138"
                    android:textColor="@color/tertiary_text_dark"
                    android:textSize="@dimen/text_size_caption"/>

                <TextView
                    android:id="@+id/group_sale_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="已售999份"
                    android:textColor="@color/tertiary_text_dark"
                    android:textSize="@dimen/text_size_caption"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>